    <title>GetaJobGH - Recruitment Support Platform and Service</title>

  </head>
  <body>

    <% include includes/landing_page/mobile_nav %>

    <nav>

    <div class="site_header">

        <div class="site_container">

            <% include includes/landing_page/landing_page_nav %>

            <div class="ml-auto mobile_menu">
                <i class="fas fa-bars"></i>
            </div>

            <div class="row d-flex flex-row align-items-center py-5">
                <div class="col-md-6 header_left_part">

                    <div class="row">
                        <div class="col-md-12 header_text">
                            <h3>
                                Find a <span> job </span> easily
                            </h3>            
                            <p class="pt-4">
                                With verified, fresh job vacancies directly from recruiters and employers. 
                                We create a first-class experience for those seeking new job opportunities.
                            </p>        
                        </div>
                        <div class="col-md-12 py-4">
                            <form action="/jobs/search-job" method="post" >
                                <div class="input_div flex_row_align_center header_search_field">
                                    <div class="keyword_input">
                                        <input type="text" name="keyword" id="keyword" placeholder="Search for a Job or skill">
                                    </div>
                                    <!--<div class="location_input">
                                        <input type="text" name="location" id="location" placeholder="Location">
                                    </div> -->
                                    <div class="search_btn">
                                        <button>
                                            <i class="fas fa-search-location"></i> <span> Search </span>
                                        </button>
                                    </div>
                                </div>
                            </form>

                        </div>
                        <div class="col-md-12 clients">
                            <p>
                                Trusted By:
                            </p>

                            <div class="pt_3">
                                <div class="clients_logo">
                                    <div class="">
                                        <img style="margin-bottom:25px;" src="/images/unilever_logo_grey.png" alt="unilever_logo">
                                    </div>
                                    <div class="">
                                        <img style="margin-bottom:25px;" src="/images/jumia_logo_grey.png" alt="jumia_logo">
                                    </div>
                                    <div class="">
                                        <img style="margin-bottom:25px;" src="/images/societe_generale_logo_grey.png" alt="societe_generale_logo">
                                    </div>
                                    <div class="">
                                        <img style="margin-bottom:25px;" src="/images/ge_logo_grey.png" alt="ge_logo">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-sm-6 header_right_img">

                    <div class="header_img">
                        <img src="/images/landing_image_1.jpg" alt="landing_page pic">
                    </div>

                </div>
            </div>

        </div>

    </div>

    </nav>

    <section class="section_two">
        <div class="">
            <div class="site_container">
                <h3>
                    Latest Jobs
                </h3>

                <div class="pt-5 jobs_slider">
                    <div class="jobs_slider_wrapper">
                        
                        <% for(var i = 0; i < jobs.length; i++){%>
                            <div class="job">
                                <div class="job_top">
                                    <div class="d-flex flex-row justify-content-end top">
                                        <span>
                                            <%=jobs[i].job_type_name%>
                                        </span>
                                    </div>

                                    <% var company_logo = typeof jobs[i].company_logo_url != 'undefined' && jobs[i].company_logo_url != 'null' && jobs[i].company_logo_url != null && jobs[i].company_logo_url != '' ? jobs[i].company_logo_url : '/images/no-company-logo.png'; %>
                                        
                                    <div class="d-flex flex-row justify-content-center py-5 middle">
                                        <img width="60px" height="60px" src="<%=company_logo%>" alt="Company Logo">
                                    </div>

                                    <div class="d-flex flex-row justify-content-center bottom">
                                        <h4>
                                            <%=jobs[i].job_name%>
                                        </h4>
                                    </div>        
                                </div>

                                <div class="job_bottom">
                                    <div class="row">
                                        <div class="col-sm-12 job_place">
                                            <h4>
                                                <%=jobs[i].company_name%>
                                            </h4>
                                        </div>
                                    </div>  
                                    
                                    <div class="d-flex flex-row justify-content-between align-items-center py-4 bottom_down">
                                        <div class="loc">
                                            <% var location = jobs[i].state_name + ', ' + jobs[i].country_name; %>
                                            <p>
                                                <i class="fas fa-map-marker-alt"></i><%=location %>
                                            </p>
                                        </div>

                                        <% var link = '/job-detail/' + jobs[i].job_id; %>
                                        <div class="apply_link">
                                            <a href="<%=link%>"> Apply now </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <%}%>
                    </div>                    
                    
                </div>

                <div class="d-flex flex-row arr_scroll">
                        <div class="ml-auto mr-3 back">
                                <i class="fas fa-long-arrow-alt-left"></i>
                        </div>
                        <div class="forward">
                                <i class="fas fa-long-arrow-alt-right"></i>
                        </div>
                </div>

            </div>

        </div>

    </section>

    <section class="section_three">
        <div>

            <div class="site_container">

                <div class="how_it_works_index">
                    <div class="p_0">

                        <div class="flex_row_align_center_justify_start staffs_container">

                        <div class="flex_col staff_col_1">

                            <div class="staffs mb_5">
                                <div class="staff_img">
